{
	"name": "angular-dev-enhanced",
	"version": "0.0.0",
	"scripts": {
		"start": "ng serve --host 0.0.0.0",
		"build": "ng build",
		"build:prod": "ng build --prod",
		"test": "jest --config=jest.config.js --coverage --coverageDirectory=./.coverage/jest --logHeapUsage",
		"commitlint": "commitlint --edit",
		"prepare": "husky",
		"lint": "pnpm eslint ./src --ext .ts",
		"lint:fix": "pnpm eslint ./src --ext .ts --fix",
		"format": "pnpm prettier --write .",
		"script:test": "node ./scripts/pre-commit-check.js",
		"playwright": "npx playwright test --config playwright.config.ts",
		"playwright:ui": "npx playwright test --ui",
		"stylelint": "stylelint \"**/*.{css,scss}\"",
		"stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix",
		"prettier": "prettier --check \"**/*.{ts,js,json,md}\"",
		"prettier:fix": "prettier --write \"**/*.{ts,js,json,md}\""
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^20.1.6",
		"@angular/common": "^20.1.6",
		"@angular/compiler": "^20.1.6",
		"@angular/core": "^20.1.6",
		"@angular/forms": "^20.1.6",
		"@angular/platform-browser": "^20.1.6",
		"@angular/platform-browser-dynamic": "^20.1.6",
		"@angular/router": "^20.1.6",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0",
		"zone.js": "~0.15.1"
	},
	"devDependencies": {
		"@angular/build": "^20.1.5",
		"@angular/cli": "^20.1.5",
		"@angular/compiler-cli": "^20.1.6",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/js": "^9.5.0",
		"@playwright/test": "^1.45.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.10.1",
		"eslint": "~9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"globals": "^16.5.0",
		"husky": "^9.0.11",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"jest-html-reporter": "^4.3.0",
		"jest-preset-angular": "^15.0.0",
		"prettier": "3.6.2",
		"stylelint": "^16.25.0",
		"stylelint-config-standard": "^39.0.1",
		"ts-node": "^10.9.2",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.47.0"
	}
}
